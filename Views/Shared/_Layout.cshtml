<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/customcsc.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <div class="container-fluid p-1 header50">
            <div class="row">
                <div class="col-md-2">
                    <center> <img id="my" src="~/image/c2c.jpg" class="img-responsive rounded-circle" alt="my c2c"></center>

                </div>
                <div class="col-md-7">
                    <nav class="navbar navbar-expand-md navbar-dark">
                        <div>
                            <p class="text-left c2ctext">Read Through the Bible</p>
                          
                        </div>

                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class=" header50 collapse navbar-collapse" id="collapsibleNavbar">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Contact</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Resource</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Subscribe</a>
                                </li>

                            </ul>
                        </div>
                    </nav>
                </div>
                <div class="col-md-3 regtext">

                    <div class="equalspace">
                        <div><label>Join Us&nbsp&nbsp <i class="fa fa-registered" style="font-size:24px;color:white"></i> </label></div>
                        <div>
                            <label> Sign In&nbsp&nbsp<i class="fa fa-sign-in" aria-hidden="true" style="font-size:24px;color:white"></i> </label>
                        </div>
                        <div> <i class="fa fa-facebook" aria-hidden="true" style="font-size:25px;color:white"></i></div>
                        <div>  <i class="fa fa-youtube" aria-hidden="true" style="font-size:25px;color:white"></i></div>
                        <div><i class="fa fa-instagram" aria-hidden="true" style="font-size:25px;color:white"></i></div>
                    </div>
                   
                 

                </div>
  
            

                           







                    </div>
             
        </div>  
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="container-fluid p-1 footer">
        <div class="container-fluid p-1 footer">
            &copy; 2021 - C2Cover - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

